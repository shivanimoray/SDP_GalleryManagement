<% include partials/header %>
<% include partials/navbar1 %>

<div>

    <h1 class="card_margin text_allign">Upcoming EVENTS</h1>
   <% events.forEach(function(event) { %> 
     <div class="card container card_margin" >
        <div class="card-body">
             <h5 class="card-title"><%= event.eventname %></h5> 
                <p class="card-text"><%= event.eventdescription %></p> 
                    <p class="card-text">Contact:<%= event.eventstaff.sfname + event.eventstaff.slname %></p>
                    <p class="card-text"><%= event.eventstaff.semail %></p>
                        <p class="card-text"><%= event.eventstaff.scontactnum %></p>
                        
                        <!-- write if condition, to display delete icon only in admin page -->
                        <button class="delete_btn fa fa-trash" data-toggle="modal" data-target="#exampleModalCenter"> </button>
                                     
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Are you sure you want to Delete?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            </div>
                                        
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-success ">YES</button>
                                            <button type="button" class="btn btn-danger " data-dismiss="modal">NO</button>
                                            <!-- <% event.deleteOne() %> -->
                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>    
                            
                            
                            </p>
                            </div>
                        </div>
                        
                                    
                    </div>
        </div>
    </div>
    <% }); %> 

</div> 
          
<% include partials/footer %>